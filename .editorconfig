# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.txt]
ij_formatter_enabled = false
insert_final_newline = false
